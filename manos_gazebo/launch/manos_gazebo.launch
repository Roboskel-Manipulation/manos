<?xml version="1.0"?>
<launch>

  <arg name="paused" default="false"/>
  <arg name="gui" default="false"/>
  <arg name="limited" default="false"/>
  <arg name="rviz_conf" default="$(find manos_gazebo)/config/rviz/manos.rviz"/>
  <arg name="cart_control" default="false"/>

  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="world_name" value="worlds/empty.world"/>
    <arg name="paused" value="$(arg paused)"/>
    <arg name="gui" value="$(arg gui)"/>    
  </include>

  <include file="$(find manos_description)/launch/ur3_pg70_upload.launch">
    <arg name="limited" value="$(arg limited)"/>
    <arg name="cart_control" value="$(arg cart_control)"/>
  </include>


  <node name="spawn_gazebo_model" pkg="gazebo_ros" type="spawn_model" args="-urdf -param robot_description -model robot -z 0.0 " respawn="false" output="screen" />
  
  <node pkg="robot_state_publisher" type="robot_state_publisher" name="robot_state_publisher">
    <param name="publish_frequency" type="double" value="200.0" />
    <param name="tf_prefix" type="string" value="" />
  </node>
  
  <!-- Fake Calibration -->
  <node pkg="rostopic" type="rostopic" name="fake_joint_calibration"
        args="pub /calibrated std_msgs/Bool true" />
  

  <!-- Load Joint Controller -->
  <group unless="$(arg cart_control)">
    <rosparam file="$(find manos_gazebo)/config/manos_controller.yaml" command="load"/>
    <node name="arm_controller_spawner" pkg="controller_manager" type="controller_manager" args="spawn arm_controller" respawn="false" output="screen"/>
  </group>
  <!-- joint_state_controller -->
  <rosparam file="$(find manos_gazebo)/config/joint_state_controller.yaml" command="load"/>
  <node name="joint_state_controller_spawner" pkg="controller_manager" type="controller_manager" args="spawn joint_state_controller" respawn="false" output="screen"/>
  
  <!-- Load Cartesian Controller -->
  <group if="$(arg cart_control)">
    <rosparam file="$(find manos_gazebo)/config/manos_cartesian_controller.yaml" command="load"/>
    <node name="arm_cartesian_controller_spawner" pkg="controller_manager" type="controller_manager" args="spawn manos_cartesian_velocity_controller_sim" respawn="false" output="screen"/>

    <node name="rviz" pkg="rviz" type="rviz" args="-d $(arg rviz_conf)"/>
  </group>

</launch>